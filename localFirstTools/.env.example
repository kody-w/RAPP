# Azure AI Configuration - Example File
# Copy this file to .env and fill in your actual credentials
# IMPORTANT: Never commit your actual .env file to version control

# Azure Function Configuration
AZURE_FUNCTION_ENDPOINT=https://azfbusinessbot.azurewebsites.net/api/businessinsightbot_function
AZURE_FUNCTION_KEY=YOUR_AZURE_FUNCTION_KEY_HERE
# Get this from: Azure Portal > Your Function App > Functions > Function Keys > Copy "default" key

# Azure Text-to-Speech (TTS) Configuration
AZURE_TEXT_TO_SPEECH_KEY=YOUR_AZURE_TEXT_TO_SPEECH_KEY_HERE
AZURE_TEXT_TO_SPEECH_REGION=eastus
# Get this from: Azure Portal > Cognitive Services > Text to Speech > Keys and Endpoint

# Application Configuration
APP_GUID=c0p110t0-aaaa-bbbb-cccc-123456789abc
APP_NAME=AplAI
APP_VERSION=2.0.0

# Optional: Additional AI Provider Keys
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=

# Speech Settings (Optional)
TTS_VOICE_NAME=en-US-JennyNeural
SPEECH_RECOGNITION_LANGUAGE=en-US
SPEECH_ENABLED=true

# LLM Model Configuration
LLM_PROVIDER=azure
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# Application Preferences
THEME=dark
AUTO_SAVE=true
NOTIFICATIONS=true
VOICE_ENABLED=true

# Development Settings
DEBUG_MODE=false
LOG_LEVEL=info
